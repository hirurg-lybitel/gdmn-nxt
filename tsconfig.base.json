{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2021",
    "module": "ESNext",
    "lib": ["ES2021", "ES2021.String", "DOM", "ES2022.Array"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@gdmn-nxt/api/*": ["apps/gdmn-nxt-server/src/app/features/*"],
      "@gdmn-nxt/assets/*": ["apps/gdmn-nxt-server/src/assets/*"],
      "@gdmn-nxt/cache-manager": ["libs/cache-manager/src/index.ts"],
      "@gdmn-nxt/components/*": ["apps/gdmn-nxt-web/src/app/components/*"],
      "@gdmn-nxt/config": ["libs/config/src/index.ts"],
      "@gdmn-nxt/controllers/*": ["apps/gdmn-nxt-server/src/app/controllers/*"],
      "@gdmn-nxt/db-connection": ["libs/db-connection/src/index.ts"],
      "@gdmn-nxt/modules/*": ["apps/gdmn-nxt-server/src/app/modules/*"],
      "@gdmn-nxt/repositories/*": [
        "apps/gdmn-nxt-server/src/app/repositories/*"
      ],
      "@gdmn-nxt/scheduler": ["libs/scheduler/src/index.ts"],
      "@gdmn-nxt/socket": ["libs/socket/src/index.ts"],
      "@gdmn-nxt/ui-assets": ["libs/ui-assets/src/index.ts"],
      "@gdmn/2FA": ["libs/2-fa/src/index.ts"],
      "@gdmn/constants/client": ["apps/gdmn-nxt-web/src/app/constants"],
      "@gdmn/constants/server": ["apps/gdmn-nxt-server/src/app/constants"],
      "@gdmn/mailer": ["libs/mailer/src/index.ts"],
      "@gsbelarus/ui-common-dialogs": ["libs/ui-common-dialogs/src/index.ts"],
      "@gsbelarus/util-api-types": ["libs/util-api-types/src/index.ts"],
      "@gsbelarus/util-helpers": ["libs/util-helpers/src/index.ts"],
      "@gsbelarus/util-useful": ["libs/util-useful/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
